<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xuge.sampletest">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- test service -->
        <activity android:name=".service.ServiceTestActivity" />

        <service android:name=".service.CustomService" />

        <activity android:name=".service.client.ClientActivity" />

        <service
            android:name=".service.server.RemoteService"
            android:process=":xuge" />

        <activity android:name=".retrofit.TestRetrofitActivity"></activity>
        <activity android:name=".bitmap.BitmapTestActivity"></activity>
    </application>

</manifest>